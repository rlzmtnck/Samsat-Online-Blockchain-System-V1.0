<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<h2>Edit Data</h2><br>

<form action="/samsat/edit/<%= id %>" method="post" name="form1">
    <div class="form-group ">
          <label>NOPOL</label>
          <input class="form-control" type="text" name="nopol" id="nopol" value="<%= nopol %>" />
    </div>
    <div class="form-group ">
          <label>Nama</label>
          <input class="form-control" type="text" name="nama" id="nama" value="<%= nama %>" />
    </div>
    <div class="form-group ">
          <label>Alamat</label>
          <input class="form-control" type="text" name="alamat" id="alamat" value="<%= alamat %>" />
    </div>
    <div class="form-group ">
          <label>Phone</label>
          <input class="form-control" type="text" name="phone" id="phone" value="<%= phone %>" />
    </div>



    <input class="btn btn-info " type="submit" name="Submit" value="Edit" />
    <input class="btn btn-info " href='/samsat' type="submit" name="/samsat" value="Cancel" />

    <input type="hidden" name="_method" value="PUT" />
</form>

